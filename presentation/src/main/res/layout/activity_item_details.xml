<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/grey_100"
            fresco:placeholderImage="@drawable/default_auction_item_img"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:failureImage="@drawable/default_auction_item_img"
            fresco:failureImageScaleType="fitCenter"
            android:id="@+id/item_details_image_sdv"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_marginTop="8dp"
                style="@style/AppTheme.TitleSingleLine"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_details_title_tv"
                android:text="Item 1"/>


            <TextView
                style="@style/AppTheme.SubtitleSingleLine"
                android:textSize="14sp"
                android:maxLines="100"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_details_description_tv"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."/>

        </LinearLayout>

        <Button
            android:layout_marginTop="@dimen/activity_vertical_margin"
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:text="@string/item_details_close"
            android:id="@+id/item_details_close_bt"/>

    </LinearLayout>
</ScrollView>