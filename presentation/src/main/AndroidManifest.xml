<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felipeporge.sample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.felipeporge.sample.BaseApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.felipeporge.sample.presentation.views.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Splash"
            android:resizeableActivity="false"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.felipeporge.sample.presentation.views.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.PrimaryColorBg"
            android:resizeableActivity="false"
            android:launchMode="singleTask"/>

        <activity android:name="com.felipeporge.sample.presentation.views.activities.WalkthroughActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Walkthrough"
            android:resizeableActivity="false"
            android:launchMode="singleTask"/>

        <activity android:name="com.felipeporge.sample.presentation.views.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:resizeableActivity="false"
            android:launchMode="singleTask" />

        <activity android:name="com.felipeporge.sample.presentation.views.activities.ItemDetailsActivity"
            android:parentActivityName="com.felipeporge.sample.presentation.views.activities.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:resizeableActivity="false"
            android:label="@string/item_details_title"/>
    </application>

</manifest>